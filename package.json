{
  "name": "prab-cli",
  "version": "1.1.0",
  "description": "AI-powered coding assistant for your terminal. Built with Groq's lightning-fast LLMs, featuring autonomous tool execution, syntax-highlighted output, and git integration.",
  "main": "dist/index.js",
  "bin": {
    "prab-cli": "./dist/index.js",
    "groq-cli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "log": "ts-node src/log-viewer.ts",
    "log:list": "ts-node src/log-viewer.ts list",
    "log:help": "ts-node src/log-viewer.ts help",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run build",
    "prepublishOnly": "npm run validate",
    "test": "npm run validate",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "cli",
    "ai",
    "groq",
    "llm",
    "coding-assistant",
    "terminal",
    "developer-tools",
    "git",
    "code-generation",
    "langchain"
  ],
  "author": "Prabhanjan Sharma",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/prab002/prab-cli.git"
  },
  "bugs": {
    "url": "https://github.com/prab002/prab-cli/issues"
  },
  "homepage": "https://github.com/prab002/prab-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@inquirer/search": "^4.1.0",
    "@inquirer/select": "^5.0.4",
    "@langchain/core": "^1.1.11",
    "@langchain/groq": "^1.0.2",
    "@langchain/openai": "^1.2.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "diff": "^8.0.2",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "groq-sdk": "^0.37.0",
    "inquirer": "^13.1.0",
    "ora": "^9.0.0",
    "simple-git": "^3.30.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/diff": "^7.0.2",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
